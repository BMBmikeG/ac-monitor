{{> admin/header active_menu_overview=true}}
<div class="row">
    <div id="adminStats" class="col-md-2">
        <div class="row">
            <div class="col-md-12">
                <div class="panel panel-default">
                    <div class="panel-heading">
                        <h3 class="panel-title">Actions</h3>
                    </div>
                    <table class="table">
                        <tr><td><a href="presets"><img src="/img/icons/famfam/add.png"/> Preset</a></td></tr>
                        <tr><td><a href="tracks"><img src="/img/icons/famfam/add.png"/> Track</a></td></tr>
                        <tr><td><a href="cars"><img src="/img/icons/famfam/add.png"/> Car</a></td></tr>
