<div id="adminTracks" class="col-md-4">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Available Tracks</h3>
        </div>
        {{#if tracks}}
            <table class="table">
                <tr><th>Name</th><th>Delete</th></tr>
                {{#each tracks}}
                    <tr>
                        <td>{{#formatTrack}}{{this}}{{/formatTrack}}</td>
                        <td>
                            <button title="Delete track" type="button" class="btn btn-danger btn-xs"
                                    onclick="handleDelete('{{this}}')">
                                <span class="glyphicon glyphicon-remove"></span>
                            </button>
                        </td>
                    </tr>
                {{/each}}
            </table>
        {{else}}
            <div class="panel-body">
                No tracks found in server content directory.
            </div>
        {{/if}}
    </div>
</div>
<div id="adminTracksUpload" class="col-md-6">
    <div class="panel panel-default">
        <div class="panel-heading">
            <h3 class="panel-title">Track Upload</h3>
        </div>
        <div class="panel-body">
            <div class="form-group has-error has-feedback">
                <label class="control-label" for="contentname">Enter track name:</label>
                <input class="form-control" type="text" id="contentname" name="tracks" onkeyup="checkUploadForm()"/>
                <span class="glyphicon glyphicon-remove form-control-feedback" id="contentnamefeedback"></span>
                <span class="help-block">The name of the &lt;track&gt; folder "must" be entered here.</span>
            </div>
            <div class="form-group has-error has-feedback">
                <label class="control-label" for="files">Select: ".../content/&lt;track&gt;/data/surfaces.ini"</label>
                <input class="form-control" type="file" id="files" name="files[]" onchange="checkUploadForm()"/>
                <span class="glyphicon glyphicon-remove form-control-feedback" id="contentfilesfeedback"></span>
            </div>
        </div>
        <div class="panel-footer" style="text-align: right">
            <button id="uploadbutton" class="btn btn-success" disabled onclick="handleUpload()">Upload</button>
        </div>
    </div>
</div>